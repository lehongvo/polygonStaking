# ========================================
# POLYGON STAKING - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# NETWORK CONFIGURATION
# ========================================

# Private Key for deployment (REQUIRED)
PRIVATE_KEY=

# RPC URLs (REQUIRED)
POLYGON_RPC_URL=
AMOY_RPC_URL=

# ========================================
# VERIFICATION & EXPLORER
# ========================================

# PolygonScan API Key for contract verification (OPTIONAL)
POLYGONSCAN_API_KEY=

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Network to deploy to (OPTIONAL - defaults to localhost)
HARDHAT_NETWORK=amoy

# POL Token Address (OPTIONAL - will deploy test token if not provided)
POL_TOKEN_ADDRESS=

# Deploy test token for testnets (OPTIONAL - defaults to true for testnets)
DEPLOY_TEST_TOKEN=true

# ========================================
# PROTOCOL ADDRESSES (OPTIONAL)
# ========================================

# Stader Liquid Staking Protocol
STADER_ADDRESS=0x1234567890123456789012345678901234567890

# ClayStack Liquid Staking Protocol  
CLAYSTACK_ADDRESS=0x2345678901234567890123456789012345678901

# Ankr Liquid Staking Protocol
ANKR_ADDRESS=0x3456789012345678901234567890123456789012

# QuickSwap LP Staking Protocol
QUICKSWAP_LP_ADDRESS=0x4567890123456789012345678901234567890123

# Aave Lending Pool Protocol
AAVE_POOL_ADDRESS=0x5678901234567890123456789012345678901234

# ========================================
# DEVELOPMENT & TESTING
# ========================================

# Enable gas reporting (OPTIONAL)
REPORT_GAS=true

# ========================================
# SECURITY NOTES
# ========================================
# ⚠️  WARNING: Never commit this file to version control
# ⚠️  WARNING: Keep your private key secure
# ⚠️  WARNING: Use different private keys for testnet and mainnet 